<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#66000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:paddingTop="20dp" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_file" android:visibility="visible" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="60dp">
            <ImageView android:id="@+id/iv_close" android:padding="13dp" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:src="@drawable/ic_toolbar_close_white" android:layout_alignParentRight="true"/>
            <ImageView android:id="@+id/iv_sort" android:padding="13dp" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:src="@drawable/ic_detail_sort_white" android:layout_toLeftOf="@+id/iv_close"/>
            <ImageView android:id="@+id/iv_grid" android:padding="13dp" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:src="@drawable/ic_category_vertical_white" android:layout_toLeftOf="@+id/iv_sort"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
