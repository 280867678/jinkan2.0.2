<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rlyt_content" android:paddingLeft="15dp" android:paddingTop="9dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="@color/text_black" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="这里是标题" android:maxLines="1"/>
        <me.tvspark.widget.HorizontalProgressBarWithNumber android:id="@+id/progressBar" android:layout_width="match_parent" android:layout_height="20dp" android:layout_marginTop="5dp" android:max="100" android:layout_below="@+id/tv_title" style="?android:attr/progressBarStyleHorizontal"/>
        <TextView android:textSize="11sp" android:textColor="@color/gray" android:ellipsize="end" android:id="@+id/tv_speed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="0.0b/s" android:maxLines="1" android:layout_below="@+id/progressBar"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/progressBar" android:layout_alignParentRight="true">
            <TextView android:textSize="11sp" android:textColor="@color/text_gray" android:gravity="center" android:id="@+id/tv_del" android:layout_width="50dp" android:layout_height="30dp" android:layout_marginRight="5dp" android:text="删除"/>
            <TextView android:textSize="11sp" android:textColor="@color/plum" android:gravity="center" android:id="@+id/tv_repair" android:layout_width="50dp" android:layout_height="30dp" android:layout_marginRight="5dp" android:text="修复"/>
            <TextView android:textSize="11sp" android:textColor="@color/googleBlue" android:gravity="center" android:id="@+id/tv_play" android:layout_width="70dp" android:layout_height="30dp" android:layout_marginRight="5dp" android:text="边下边播"/>
            <TextView android:gravity="center" android:id="@+id/tv_pause" android:layout_width="50dp" android:layout_height="30dp" android:text="暂停"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="0.8dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_below="@+id/rlyt_content"/>
</RelativeLayout>
