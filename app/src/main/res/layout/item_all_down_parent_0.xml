<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rlyt_content" android:paddingLeft="15dp" android:paddingTop="9dp" android:paddingRight="15dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <me.tvspark.widget.RoundImageView android:id="@+id/iv_cover" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/bg_place_holder_horizontal_small" android:scaleType="centerCrop"/>
        <TextView android:textSize="15sp" android:textColor="@color/text_gray" android:ellipsize="end" android:id="@+id/tv_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="6dp" android:text="缓存任务列表" android:maxLines="1" android:layout_toRightOf="@+id/iv_cover"/>
        <me.tvspark.widget.ShangshabanChangeTextSpaceView android:textSize="8sp" android:textColor="@color/text_gray" android:id="@+id/tv_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="长按每一集可缓存" android:layout_below="@+id/tv_txt" android:layout_alignLeft="@+id/tv_txt"/>
        <ImageView android:layout_width="13dp" android:layout_height="13dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_arrow_right"/>
    </RelativeLayout>
    <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="0.8dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_below="@+id/rlyt_content"/>
</RelativeLayout>
