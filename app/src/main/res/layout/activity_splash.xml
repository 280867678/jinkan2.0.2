<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/background" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/llyt_logo" android:layout_width="match_parent" android:layout_height="80dp" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/iv_logo" android:background="@mipmap/ic_launcher" android:layout_width="30dp" android:layout_height="30dp" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="@color/text_black" android:id="@+id/tv_app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/app_name" android:layout_toRightOf="@+id/iv_logo" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/gray" android:id="@+id/tv_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginBottom="2dp" android:text="V1.0.0" android:layout_toRightOf="@+id/tv_app_name" android:layout_alignBottom="@+id/tv_app_name" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center" android:id="@+id/splash_container1" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/llyt_logo"/>
    <TextView android:textSize="13sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_skip_view" android:background="@drawable/background_circle" android:visibility="gone" android:layout_width="60dp" android:layout_height="25dp" android:layout_marginTop="50dp" android:layout_marginRight="16dp" android:text="跳过 6" android:layout_alignParentRight="true"/>
    <ImageView android:id="@+id/iv_splash" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:layout_above="@+id/llyt_logo"/>
</RelativeLayout>
