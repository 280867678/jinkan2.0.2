<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/frameLayout" android:background="@color/background" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlyt_action_bar" android:layout_width="match_parent" android:layout_height="@dimen/tool_bar_height">
        <ImageView android:id="@+id/iv_back" android:padding="13dp" android:clickable="true" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginLeft="3dp" android:src="@drawable/ic_toolbar_back_black"/>
        <TextView android:textSize="19sp" android:textColor="@color/text_black" android:ellipsize="end" android:id="@+id/tv_toolbar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="酷站排序" android:maxLines="1" android:layout_toRightOf="@+id/iv_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="@color/text_gray" android:gravity="center" android:id="@+id/tv_cancel" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginRight="5dp" android:text="编辑" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="@color/text_gray" android:gravity="center" android:id="@+id/tv_reset" android:visibility="gone" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginRight="15dp" android:text="重置" android:layout_toLeftOf="@+id/tv_cancel" android:layout_centerVertical="true"/>
        <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <me.tvspark.widget.easytagdragview.EasyTipDragView android:id="@+id/drag_view" android:clickable="true" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <FrameLayout android:id="@+id/flyt_banner" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="0.1dp"/>
</LinearLayout>
