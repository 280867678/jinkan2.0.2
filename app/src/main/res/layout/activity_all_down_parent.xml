<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/rlyt_root" android:background="@color/background" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlyt_top_bar" android:layout_width="match_parent" android:layout_height="45dp">
        <ImageView android:id="@+id/iv_top_back" android:padding="13dp" android:clickable="true" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginLeft="3dp" android:src="@drawable/ic_toolbar_back_black"/>
        <TextView android:textSize="19sp" android:textColor="@color/text_black" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="缓存" android:maxLines="1" android:layout_toRightOf="@+id/iv_top_back" android:layout_centerVertical="true"/>
        <me.tvspark.widget.selectionLayout.SelectionLayout android:id="@+id/slOverall" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/flyt_banner" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="0.1dp" android:layout_alignParentBottom="true"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/refresh_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/flyt_banner" android:layout_below="@+id/rlyt_top_bar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="@color/red" android:gravity="center" android:id="@+id/tv_dlna" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingRight="15dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/dlna_tips" android:maxLines="2"/>
            <TextView android:textSize="12sp" android:textColor="@color/text_gray" android:gravity="center_vertical" android:id="@+id/tv_history" android:paddingLeft="15dp" android:paddingRight="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="25dp" android:text="上次："/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_content" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/fab_add" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/fab_margin" android:layout_marginBottom="30dp" android:src="@drawable/ic_add_color" android:layout_above="@+id/flyt_banner" android:layout_alignParentRight="true" app:backgroundTint="@color/white"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/fab_cast" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/fab_margin" android:layout_marginBottom="30dp" android:src="@drawable/ic_fab_cast" android:layout_above="@+id/flyt_banner" android:layout_alignParentRight="true" app:backgroundTint="@color/white"/>
</RelativeLayout>
