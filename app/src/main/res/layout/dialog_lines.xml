<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/shape_bg_dialog_line" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="95dp">
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/text_black" android:gravity="center" android:id="@+id/tv_cancel" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="5dp" android:text="取消"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_black" android:gravity="center" android:layout_width="wrap_content" android:layout_height="60dp" android:text="头部网站显示" android:layout_centerHorizontal="true"/>
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/text_black" android:gravity="center" android:id="@+id/tv_ok" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginRight="5dp" android:text="当前" android:layout_alignParentRight="true"/>
            <TextView android:textSize="10sp" android:textColor="@color/text_gray3" android:gravity="bottom" android:id="@+id/tv_add" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="20dp" android:layout_marginBottom="10dp" android:text="APP仅作为网页解析器不提供任何数据" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_file" android:background="@color/white" android:visibility="visible" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <LinearLayout android:gravity="center" android:id="@+id/llyt_change_conf_url" android:background="@color/white" android:padding="30dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/text_black" android:gravity="center" android:id="@+id/tv_change_conf_url" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/switch_conf_url" android:lineSpacingMultiplier="1.3"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/flyt_banner" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
