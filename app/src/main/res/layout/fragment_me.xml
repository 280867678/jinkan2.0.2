<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/color_find_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlyt_top" android:background="@color/color_me_top" android:layout_width="match_parent" android:layout_height="210dp">
        <me.tvspark.widget.DoubleWavesShaderView android:layout_width="match_parent" android:layout_height="90dp" android:layout_alignParentBottom="true"/>
        <ImageView android:id="@+id/iv_icon" android:layout_width="55dp" android:layout_height="55dp" android:layout_marginTop="88dp" android:src="@mipmap/ic_launcher" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="13sp" android:textColor="@color/white" android:id="@+id/tv_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:layout_marginRight="10dp" android:text="版本号：1.0.0" android:layout_below="@+id/iv_icon" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="190dp" android:layout_marginRight="25dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:background="@drawable/shape_find_white" android:paddingLeft="27dp" android:paddingTop="10dp" android:paddingRight="25dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llyt_reward" android:layout_width="match_parent" android:layout_height="50dp">
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" app:srcCompat="@drawable/ic_app_rec"/>
                    <TextView android:textColor="@color/black" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="去除广告" android:layout_weight="1"/>
                    <ImageView android:layout_width="13dp" android:layout_height="13dp" app:srcCompat="@drawable/ic_arrow_right"/>
                </LinearLayout>
                <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="35dp"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llyt_conf" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp">
                    <ImageView android:layout_width="19dp" android:layout_height="19dp" android:src="@drawable/ic_conf"/>
                    <TextView android:textColor="@color/black" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="19dp" android:text="切换配置" android:layout_weight="1"/>
                    <ImageView android:layout_width="13dp" android:layout_height="13dp" app:srcCompat="@drawable/ic_arrow_right"/>
                </LinearLayout>
                <View android:background="@color/line_color" android:visibility="visible" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="35dp"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llyt_app_rec" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp">
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/ic_me_feedback"/>
                    <TextView android:textColor="@color/black" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="投稿网站" android:layout_weight="1"/>
                    <ImageView android:layout_width="13dp" android:layout_height="13dp" app:srcCompat="@drawable/ic_arrow_right"/>
                </LinearLayout>
                <View android:background="@color/line_color" android:visibility="visible" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="35dp"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llyt_email" android:layout_width="match_parent" android:layout_height="50dp">
                    <ImageView android:padding="1dp" android:layout_width="18dp" android:layout_height="18dp" app:srcCompat="@drawable/ic_me_email"/>
                    <TextView android:textColor="@color/black" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="建议反馈" android:layout_weight="1"/>
                    <ImageView android:layout_width="13dp" android:layout_height="13dp" app:srcCompat="@drawable/ic_arrow_right"/>
                </LinearLayout>
                <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="35dp"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llyt_notice" android:layout_width="match_parent" android:layout_height="50dp">
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" app:srcCompat="@drawable/ic_notice"/>
                    <TextView android:textColor="@color/black" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="公告说明" android:layout_weight="1"/>
                    <ImageView android:layout_width="13dp" android:layout_height="13dp" app:srcCompat="@drawable/ic_arrow_right"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:background="@drawable/shape_find_white" android:paddingLeft="27dp" android:paddingTop="3dp" android:paddingRight="25dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llyt_setting" android:layout_width="match_parent" android:layout_height="50dp">
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" app:srcCompat="@drawable/ic_drawer_setting"/>
                    <TextView android:textColor="@color/black" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="APP设置" android:layout_weight="1"/>
                    <ImageView android:layout_width="13dp" android:layout_height="13dp" app:srcCompat="@drawable/ic_arrow_right"/>
                </LinearLayout>
                <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="35dp"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llyt_share" android:layout_width="match_parent" android:layout_height="50dp">
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" app:srcCompat="@drawable/ic_me_share"/>
                    <TextView android:textColor="@color/black" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="分享APP" android:layout_weight="1"/>
                    <ImageView android:layout_width="13dp" android:layout_height="13dp" app:srcCompat="@drawable/ic_arrow_right"/>
                </LinearLayout>
                <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="35dp"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llyt_update" android:layout_width="match_parent" android:layout_height="50dp">
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" app:srcCompat="@drawable/ic_drawer_update"/>
                    <TextView android:textColor="@color/black" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="检查更新" android:layout_weight="1"/>
                    <ImageView android:layout_width="13dp" android:layout_height="13dp" app:srcCompat="@drawable/ic_arrow_right"/>
                </LinearLayout>
                <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="35dp"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llyt_about" android:layout_width="match_parent" android:layout_height="50dp">
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" app:srcCompat="@drawable/ic_drawer_about"/>
                    <TextView android:textColor="@color/black" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="免责关于" android:layout_weight="1"/>
                    <ImageView android:layout_width="13dp" android:layout_height="13dp" app:srcCompat="@drawable/ic_arrow_right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
