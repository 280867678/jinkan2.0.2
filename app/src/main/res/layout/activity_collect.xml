<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/background" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlyt_action_bar" android:layout_width="match_parent" android:layout_height="@dimen/tool_bar_height">
        <ImageView android:id="@+id/iv_top_back" android:padding="13dp" android:clickable="true" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginLeft="3dp" android:src="@drawable/ic_toolbar_back_black"/>
        <com.androidkun.xtablayout.XTabLayout android:id="@+id/tablayout" android:layout_width="120dp" android:layout_height="match_parent" android:layout_marginRight="5dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" app:tabTextAppearance="@style/TabLayoutTextStyle" app:xTabDividerWidthWidthText="false" app:xTabIndicatorColor="@color/colorPrimary" app:xTabIndicatorHeight="2dp" app:xTabIndicatorWidth="20dp" app:xTabSelectedTextColor="@color/colorPrimary" app:xTabTextColor="@color/text_gray" app:xTabTextSelectedBold="true"/>
        <TextView android:textSize="19sp" android:textColor="@color/text_black" android:ellipsize="end" android:id="@+id/tv_toolbar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="收藏" android:maxLines="1" android:layout_toRightOf="@+id/iv_top_back" android:layout_centerVertical="true"/>
        <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <androidx.viewpager.widget.ViewPager android:id="@+id/viewpager" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/fab_del" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/fab_margin" android:layout_marginBottom="20dp" android:src="@drawable/ic_web_source_del_red" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" app:backgroundTint="@color/line_color"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/flyt_banner" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="0.1dp"/>
</LinearLayout>
