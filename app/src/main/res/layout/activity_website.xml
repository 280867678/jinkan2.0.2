<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/background" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlyt_action_bar" android:layout_width="match_parent" android:layout_height="@dimen/tool_bar_height">
        <ImageView android:id="@+id/iv_back" android:padding="13dp" android:clickable="true" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginLeft="3dp" android:src="@drawable/ic_toolbar_back_black"/>
        <ImageView android:id="@+id/iv_search" android:padding="13dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_search_gray" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_add" android:padding="14.5dp" android:layout_width="50dp" android:layout_height="match_parent" android:src="@drawable/ic_website_add" android:layout_toLeftOf="@+id/iv_search" android:layout_centerVertical="true"/>
        <TextView android:textSize="19sp" android:textColor="@color/text_black" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="5dp" android:text="酷站" android:maxLines="1" android:layout_toLeftOf="@+id/iv_add" android:layout_toRightOf="@+id/iv_back" android:layout_centerVertical="true"/>
        <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/flyt_content" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
