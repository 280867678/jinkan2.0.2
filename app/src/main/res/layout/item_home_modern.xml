<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
    <RelativeLayout android:id="@+id/rlyt_add" android:padding="5dp" android:visibility="gone" android:layout_width="60dp" android:layout_height="wrap_content">
        <ImageView android:layout_width="45dp" android:layout_height="45dp" android:scaleType="centerCrop" android:layout_centerHorizontal="true" app:srcCompat="@drawable/bg_home_mark_frame_modern"/>
        <ImageView android:layout_width="25dp" android:layout_height="25dp" android:layout_marginTop="10dp" android:src="@drawable/ic_add_web_marks" android:scaleType="centerCrop" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="10sp" android:textColor="@color/text_black" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="52dp" android:text="添加书签" android:maxLines="1" android:layout_centerHorizontal="true" android:fontFamily="sans-serif-light"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rlyt_icon" android:padding="5dp" android:layout_width="60dp" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_icon" android:layout_width="45dp" android:layout_height="45dp" android:scaleType="centerCrop" android:layout_centerHorizontal="true"/>
        <ImageView android:layout_width="45dp" android:layout_height="45dp" android:scaleType="centerCrop" android:layout_centerHorizontal="true" app:srcCompat="@drawable/bg_home_mark_frame_modern"/>
        <TextView android:textSize="17sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_icon" android:background="@drawable/bg_home_mark_color_modern" android:padding="10dp" android:visibility="gone" android:layout_width="45dp" android:layout_height="45dp" android:text="网站书签" android:maxLines="1" android:maxLength="5" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="10sp" android:textColor="@color/text_black" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="52dp" android:text="清新养眼的" android:maxLines="1" android:layout_centerHorizontal="true" android:fontFamily="sans-serif-light"/>
    </RelativeLayout>
</LinearLayout>
